<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:textSize = "20dp"
    android:background="@drawable/home"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gra.gra.MyProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        app:srcCompat="@drawable/gra_logo_white"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <TextView
        android:text="Aadhar No.:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="32dp"
        android:id="@+id/tvAadhar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="123443214567"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:id="@+id/etAadhar"
        android:layout_toEndOf="@+id/tvAadhar" />

    <TextView
        android:text="Phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAadhar"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:id="@+id/tvPhone"
        android:layout_toLeftOf="@+id/etAadhar"
        android:layout_alignLeft="@+id/tvAadhar"
        android:layout_alignStart="@+id/tvAadhar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="+91-9950925558"
        android:ems="10"
        android:id="@+id/etPhoneNo"
        android:layout_alignBaseline="@+id/tvPhone"
        android:layout_alignBottom="@+id/tvPhone"
        android:layout_toRightOf="@+id/tvPhone"
        android:layout_toEndOf="@+id/tvPhone" />

    <TextView
        android:text="Email :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPhone"
        android:layout_marginTop="35dp"
        android:id="@+id/tvEmail"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/tvPhone"
        android:layout_alignStart="@+id/tvPhone"
        android:layout_alignRight="@+id/tvPhone"
        android:layout_alignEnd="@+id/tvPhone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:text="raviprakash.25x@gmail.com"
        android:layout_alignBaseline="@+id/tvEmail"
        android:layout_alignBottom="@+id/tvEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tvEmail"
        android:layout_toEndOf="@+id/tvEmail" />

    <Button
        android:id="@+id/bChangePswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:text="Change Password"
        android:layout_below="@+id/bUpdateProfile"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Update Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bUpdateProfile"
        android:elevation="7dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/bChangePswd"
        android:layout_alignStart="@+id/bChangePswd"
        android:layout_alignRight="@+id/bChangePswd"
        android:layout_alignEnd="@+id/bChangePswd" />

</RelativeLayout>
