<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home"
    tools:context="com.example.gra.gra.HomeActivity">

    <Button
        android:id="@+id/bLogComplaint"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="105dp"
        android:fontFamily="sans-serif-condensed"
        android:text="FILE A COMPLAINT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/bMyComplaint"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/bLogComplaint"
        android:layout_alignLeft="@+id/bLogComplaint"
        android:layout_alignRight="@+id/bLogComplaint"
        android:layout_alignStart="@+id/bLogComplaint"
        android:layout_below="@+id/bLogComplaint"
        android:layout_marginTop="22dp"
        android:text="Status of my complaints" />

    <Button
        android:text="My Profile"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/bMyProfile"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Emergency Dials"
        android:layout_width="wrap_content"
        android:layout_height="80dp"


        android:id="@+id/bEmergencyDials"

        android:layout_alignTop="@+id/bMyProfile"
        android:layout_toRightOf="@+id/bMyProfile"
        android:layout_toLeftOf="@+id/bContactUs"
        android:layout_toStartOf="@+id/bContactUs" />

    <Button
        android:id="@+id/bContactUs"
        android:layout_width="100dp"
        android:layout_height="80dp"

        android:text="Contact Us"

        android:layout_alignBottom="@+id/bEmergencyDials"
        android:layout_alignTop="@+id/bEmergencyDials"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        app:srcCompat="@drawable/gra_logo_white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView" />
</RelativeLayout>
